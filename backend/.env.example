# Django Configuration
DJANGO_SECRET_KEY=change-this-to-a-random-secret-key-in-production
DEBUG=False

# Allowed Hosts (separados por coma)
# Para App Runner, usa: tu-app-id.us-east-1.awsapprunner.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL RDS)
DATABASE_URL=postgresql://postgres:password@your-rds-endpoint.us-east-1.rds.amazonaws.com:5432/chatbot_provefut

# AWS Cognito
COGNITO_REGION=us-east-1
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX

# CORS Configuration
# En producción, especifica los orígenes permitidos (separados por coma)
CORS_ALLOWED_ORIGINS=https://tu-dominio-frontend.com,http://localhost:8080

# Redis (para WebSockets en producción - opcional)
# Si usas ElastiCache, configura aquí el endpoint
REDIS_HOST=your-redis-endpoint.cache.amazonaws.com
REDIS_PORT=6379

# File Upload Settings
MAX_FILE_SIZE=67108864
